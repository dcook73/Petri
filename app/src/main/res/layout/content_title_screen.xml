<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.cookd.petri.TitleScreen"
    tools:showIn="@layout/activity_title_screen"
    android:orientation="vertical"

    android:background="#ccddff"

    >

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:id="@+id/petriLogo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/petrilogo2"
        android:background="#00ffffff"/>

    <ImageButton
        android:src="@drawable/levelselect2"
        android:layout_width="220dip"
        android:layout_height="75dip"
        android:id="@+id/LevelSelect"
        android:layout_below="@+id/petriLogo"
        android:layout_centerHorizontal="true"
        android:background="#00ffffff" />

    <ImageButton
        android:layout_width="220dip"
        android:layout_height="75dip"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/LevelSelect"
        android:layout_alignStart="@+id/LevelSelect"
        android:background="#00ffffff"
        android:id="@+id/SandBox"
        android:src="@drawable/sandbox"/>


    <ImageButton
        android:layout_width="220dip"
        android:layout_height="75dip"
        android:layout_below="@+id/SandBox"
        android:layout_alignStart="@+id/SandBox"
        android:layout_marginTop="41dp"
        android:src="@drawable/howtoplay2"

        android:background="#00ffffff"
        android:id="@+id/HowToPlay" />


</RelativeLayout>
