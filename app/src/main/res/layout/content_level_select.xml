<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.cookd.petri.LevelSelect"
    tools:showIn="@layout/activity_level_select"
    android:orientation="vertical"

    android:background="#ccddff"

    >

    <TextView
        android:text = "LEVEL SELECT"
        android:textSize="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#00ffffff"/>

    <ImageButton
        android:src="@drawable/levelselect2"
        android:layout_width="220dip"
        android:layout_height="75dip"
        android:id="@+id/Level1Select"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:background="#00ffffff" />

    <ImageButton
        android:src="@drawable/levelselect2"
        android:layout_width="220dip"
        android:layout_height="75dip"
        android:id="@+id/Level2Select"
        android:layout_below="@+id/Level1Select"
        android:layout_centerHorizontal="true"
        android:background="#00ffffff" />
    <ImageButton
        android:src="@drawable/levelselect2"
        android:layout_width="220dip"
        android:layout_height="75dip"
        android:id="@+id/Level3Select"
        android:layout_below="@+id/Level2Select"
        android:layout_centerHorizontal="true"
        android:background="#00ffffff" />

</RelativeLayout>
